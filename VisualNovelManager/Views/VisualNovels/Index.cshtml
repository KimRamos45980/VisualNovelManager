@model IEnumerable<VisualNovelManager.Models.VisualNovel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletionStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                @if (!String.IsNullOrEmpty(item.GameAlias))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.GameAlias)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.GameTitle)
                    </td>
                }
                <td>
                @Html.DisplayFor(modelItem => item.CompletionStatus)
                </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.GameId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
